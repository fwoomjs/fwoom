{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"lib": ["ES2020"],
		"moduleResolution": "Node",
		"outDir": "dist",
		"rootDir": "src",

		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,

		"declaration": true,
		"declarationMap": false,
		"sourceMap": false,

		"types": ["node"],
		"allowSyntheticDefaultImports": true,

		"baseUrl": "./src",
		"paths": {
			"*": ["*"]
		}
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules"]
}
